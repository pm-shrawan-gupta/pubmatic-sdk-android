<?xml version="1.0" encoding="utf-8"?> 
<selector 
    xmlns:android="http://schemas.android.com/apk/res/android"> 
 
    <item>         
        <shape> 
            <gradient 
                android:startColor="@color/CUSTOM_BUTTON_GRADIENT_START_COLOR" 
                android:endColor="@color/CUSTOM_BUTTON_GRADIENT_END_COLOR" 
                android:angle="90" /> 
            <stroke 
                android:width="1dp" 
                android:color="@color/CUSTOM_BUTTON_BORDER_COLOR" /> 
            <corners 
                android:radius="5dp" /> 
            <padding 
                android:left="10dp" 
                android:top="10dp" 
                android:right="10dp" 
                android:bottom="10dp" /> 
        </shape> 
    </item> 
</selector> 
