<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.MASTAdView.MASTAdView
     	xmlns:android="http://schemas.android.com/apk/res/android"   
		android:id="@+id/metaAdView"
 		android:layout_width="fill_parent"
 		android:layout_height="100px"
 		site="23814"
 		zone="112075"
 		updateTime="60" />
    
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" >
       
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="300px"
        android:minWidth="300px"
        android:orientation="vertical" >
        
	    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Author:"></TextView>
	    <EditText android:layout_marginLeft="5dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginRight="5dp" android:inputType="none" android:id="@+id/metaAuthor" android:focusable="false" android:focusableInTouchMode="false"></EditText>
	    
	    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Title:"></TextView>
	    <EditText android:layout_marginLeft="5dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginRight="5dp" android:inputType="none" android:id="@+id/metaTitle" android:focusable="false" android:focusableInTouchMode="false"></EditText>
	        
	    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Description:"></TextView>
	    <!-- EditText android:layout_marginLeft="5dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginRight="5dp" android:inputType="none" android:id="@+id/metaDescription" android:focusable="false" android:focusableInTouchMode="false" -->
	    <WebView
	        android:id="@+id/metaDescription"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Published:"></TextView>
	    <EditText android:layout_marginLeft="5dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginRight="5dp" android:inputType="none" android:id="@+id/metaDate" android:focusable="false" android:focusableInTouchMode="false"></EditText>
	    
	    <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Tags:"></TextView>
	    <EditText android:layout_marginLeft="5dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginRight="5dp" android:inputType="none" android:id="@+id/metaTags" android:focusable="false" android:focusableInTouchMode="false"></EditText>       
    
    </LinearLayout>
	</ScrollView>
</LinearLayout>
